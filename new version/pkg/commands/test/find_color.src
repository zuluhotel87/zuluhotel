use uo;
use os;

program command_find_color( who, text )

        var targ := Target( who ),
            color := CInt( text );
            
        while( targ )
        
               SendSysMessage( who, "Color: "+color );
               targ.color := color;
               color += 1;
               
               if( color > 1500 )
                      break;
               endif
               
               Sleep(1);
        endwhile
        
	return 1;
endprogram
