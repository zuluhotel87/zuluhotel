use uo;
use util;

program command_nsight( who, level )

	level := CInt( level );
	if( level )
		who.SetLightLevel( level, 5000 );
	else
		SendSysMessage( who, "Restoring normal vision." );
		who.SetLightLevel( 1, -1 );
	endif
	
	return 1;
endprogram
