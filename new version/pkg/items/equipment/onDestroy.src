use uo;

include ":equipment:unequip";

program OnDestroy( item )

	var equipped := CInt( GetObjProperty( item, "EquippedOn" ));
	if( !equipped )
		return 1;
	endif

	var mobile := SystemFindObjectBySerial( equipped );
        UnEquipEffect( mobile, item );

	return 1;
endprogram
