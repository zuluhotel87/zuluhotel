use uo;
use os;

include ":attributes:attributes";

program TimedScript_Agility( params )

	var defender := params[1],
	    //attacker := params[2],
	    points := params[3];
	    params := 0;

	SetObjProperty( defender, "ReactiveArmorMod", points );
 
	defender.ar_mod := defender.ar_mod + points;
	
	return 1;
endprogram

