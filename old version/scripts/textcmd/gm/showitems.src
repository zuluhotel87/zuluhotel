use uo;

program textcmd_showitems(who, trange)

var range;
if (trange)
	range := CInt(trange);
else
	SendSysMessage(who, "usage: showitems distance");
	return;
endif

foreach item in ListItemsNearLocation( who.x,who.y,who.z, range )
	item.invisible := 0;
endforeach

endprogram