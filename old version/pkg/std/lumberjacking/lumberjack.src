function GetRessourceName( ressource )

	var t_name := ressource.desc;

	if( ressource.amount > 1 )
		var i := len( t_name );
		var amt := ressource.amount;
		var count := 2;
		while( CInt(amt / 10) )
			count := count + 1;
			amt := CInt( amt / 10 );
		endwhile
	
		t_name := t_name[count+1, i - count];
	endif

	return t_name;

endfunction